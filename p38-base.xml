<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <sim include="Nasal/views.xml">

    <author>BARANGER Emmanuel (3D)</author>
    <aircraft-version>0.1</aircraft-version>
    <status>Alpha</status>

    <fuel-fraction>0.8</fuel-fraction>

    <startup>
      <splash-texture>Aircraft/Lockheed-P38/p38-splash.png</splash-texture>
    </startup>

    <model>
      <path>Aircraft/Lockheed-P38/Models/p38.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
    </model>

    <submodels> 
      <serviceable type="bool">true</serviceable>
      <path>Aircraft/Lockheed-P38/Models/Effects/guns/submodels.xml</path>
    </submodels>

    <sound>
      <path>Aircraft/Lockheed-P38/Sounds/p38-sound.xml</path>
    </sound>

    <multiplay>
      <chat_display>1</chat_display>
      <generic> 
        <int type="int">0</int>  <!-- 0 immat -->
        <int type="int">0</int>  <!-- 1 immat -->
        <int type="int">0</int>  <!-- 2 immat -->
        <int type="int">0</int>  <!-- 3 immat -->
        <int type="int">0</int>  <!-- 4 immat -->
        <int type="int">0</int>  <!-- 5 immat -->
        <int type="bool">0</int> <!-- 6 smoke -->
        <int type="int">0</int>  <!-- 7 color -->
        <float n="0" alias="/instrumentation/doors/crew/position-norm"/>
        <float n="1" alias="/instrumentation/doors/passenger/position-norm"/>
      </generic>
    </multiplay>

    <flaps>
      <setting> 0.00 </setting>
      <setting> 0.25 </setting>
      <setting> 0.50 </setting>
      <setting> 0.75 </setting>
      <setting> 1.00 </setting>
    </flaps>

    <help>
      <title>Northrop p38</title>
      <key>
        <name>d</name>
        <desc>Open/Close canopy</desc>
      </key>
      <key>
        <name>D</name>
        <desc>Open/Close side windows</desc>
      </key>
      <key>
        <name>e</name>
        <desc>Guns fire</desc>
      </key>
    </help>

    <menubar include="Dialogs/p38-menu.xml"/>

  </sim>

  <controls>
    <engines>
      <engine n="0">
	<boost type="double">0</boost>
        <magnetos>0</magnetos>
      </engine>
      <engine n="1">
	<boost type="double">0</boost>
        <magnetos>0</magnetos>
      </engine>
    </engines>
  </controls>

  <engines>
    <engine n="0">
      <engine-num type="int">0</engine-num>
      <rpm>500</rpm>
      <running>false</running>
    </engine>
    <engine n="1">
      <engine-num type="int">1</engine-num>
      <rpm>500</rpm>
      <running>false</running>
    </engine>
  </engines>

  <input>
    <keyboard include="Nasal/p38-keyboard.xml"/>
  </input>
 
  <nasal>
    <doors>
      <file>Aircraft/Lockheed-P38/Nasal/doors.nas</file>
    </doors>
    <guns>
      <file>Aircraft/Lockheed-P38/Nasal/weapons.nas</file>
      <file>Aircraft/Lockheed-P38/Nasal/revi.nas</file>
    </guns>
    <p38>
      <file>Aircraft/Lockheed-P38/Nasal/liveries.nas</file>
      <file>Aircraft/Lockheed-P38/Nasal/light.nas</file>
    </p38>
  </nasal>

</PropertyList>

